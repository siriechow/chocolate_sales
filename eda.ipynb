# ============================================================
# Exploratory Data Analysis (EDA)
# ============================================================
"""
Objective:
Perform deep statistical and visualization-based exploration
to understand patterns, trends, and relationships in the data.

Input:
- cleaned_data.csv (from data_cleaning.ipynb)

Output:
- Insights for feature engineering & modeling
"""

# ============================================================
# Library Imports
# ============================================================
import pandas as pd
import numpy as np

import matplotlib.pyplot as plt
import seaborn as sns
import plotly.express as px

# Visualization settings
sns.set(style="whitegrid")
plt.rcParams['figure.figsize'] = (10, 6)

# ============================================================
# Data Loading
# ============================================================
df = pd.read_csv("cleaned_data.csv")

print("âœ… Cleaned dataset loaded")
print("Shape:", df.shape)

# ============================================================
# Basic Data Overview
# ============================================================
print("\n--- Dataset Info ---")
df.info()

print("\n--- Statistical Summary (Numerical) ---")
df.describe()

print("\n--- Statistical Summary (Categorical) ---")
df.describe(include='object')

# ============================================================
# Target Variable Analysis: Boxes Shipped
# ============================================================

# Distribution
plt.figure()
sns.histplot(df['boxes_shipped'], bins=30, kde=True)
plt.title("Distribution of Boxes Shipped")
plt.xlabel("Boxes Shipped")
plt.ylabel("Frequency")
plt.show()

# Boxplot (Outlier Detection)
plt.figure()
sns.boxplot(x=df['boxes_shipped'])
plt.title("Boxplot of Boxes Shipped (Outlier Detection)")
plt.show()

# ============================================================
# Country-wise Analysis
# ============================================================

country_summary = df.groupby('country')['boxes_shipped'].agg(['mean', 'median', 'sum']).sort_values(by='mean', ascending=False)
print("\n--- Country-wise Summary ---")
print(country_summary)

plt.figure()
sns.barplot(
    data=df,
    x='country',
    y='boxes_shipped',
    estimator=np.mean
)
plt.title("Average Boxes Shipped by Country")
plt.xticks(rotation=45)
plt.show()

# Interactive Plot
px.bar(
    country_summary.reset_index(),
    x='country',
    y='mean',
    title="Average Boxes Shipped by Country (Interactive)"
).show()

# ============================================================
# Product-wise Analysis
# ============================================================

top_products = (
    df.groupby('product')['boxes_shipped']
    .mean()
    .sort_values(ascending=False)
    .head(10)
)

plt.figure()
sns.barplot(
    x=top_products.values,
    y=top_products.index
)
plt.title("Top 10 Products by Average Boxes Shipped")
plt.xlabel("Average Boxes Shipped")
plt.ylabel("Product")
plt.show()

# ============================================================
# Sales Person Performance
# ============================================================

sales_summary = (
    df.groupby('sales_person')['boxes_shipped']
    .sum()
    .sort_values(ascending=False)
    .head(10)
)

plt.figure()
sns.barplot(
    x=sales_summary.values,
    y=sales_summary.index
)
plt.title("Top 10 Sales Persons by Total Boxes Shipped")
plt.xlabel("Total Boxes Shipped")
plt.ylabel("Sales Person")
plt.show()

# ============================================================
# Amount vs Boxes Shipped
# ============================================================

plt.figure()
sns.scatterplot(
    data=df,
    x='amount',
    y='boxes_shipped',
    alpha=0.6
)
plt.title("Amount vs Boxes Shipped")
plt.xlabel("Sales Amount")
plt.ylabel("Boxes Shipped")
plt.show()

# Correlation
correlation = df[['amount', 'boxes_shipped']].corr()
print("\nCorrelation between Amount and Boxes Shipped:")
print(correlation)

# ============================================================
# Time-Based Analysis
# ============================================================

df['date'] = pd.to_datetime(df['date'])
df['year'] = df['date'].dt.year
df['month'] = df['date'].dt.month

monthly_trend = df.groupby(['year', 'month'])['boxes_shipped'].sum().reset_index()

px.line(
    monthly_trend,
    x='month',
    y='boxes_shipped',
    color='year',
    title="Monthly Trend of Boxes Shipped Over Years"
).show()

# ============================================================
# Categorical Impact Comparison
# ============================================================

plt.figure()
sns.boxplot(
    data=df,
    x='country',
    y='boxes_shipped'
)
plt.title("Boxes Shipped Distribution by Country")
plt.xticks(rotation=45)
plt.show()

plt.figure()
sns.boxplot(
    data=df,
    x='country',
    y='amount'
)
plt.title("Amount Distribution by Country")
plt.xticks(rotation=45)
plt.show()

# ============================================================
# Key Insights Summary
# ============================================================

print("""
KEY EDA INSIGHTS:
1. Boxes Shipped shows right-skewed distribution with high-value outliers.
2. Country and Product significantly influence shipment volume.
3. Strong positive relationship exists between Amount and Boxes Shipped.
4. Certain sales persons consistently outperform others.
5. Seasonal trends are visible across months and years.
""")
